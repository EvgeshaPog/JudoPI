<Window x:Class="Judo.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Judo"
        mc:Ignorable="d"
        Title="Регистрация" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name ="tbFIO" HorizontalAlignment="Left" Height="25" Margin="136,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>

        <Label x:Name ="lbFIO" Content="ФИО" HorizontalAlignment="Left" Margin="136,30,0,0" VerticalAlignment="Top" FontFamily="Arial"/>
        <TextBox x:Name ="tbLogin" HorizontalAlignment="Left" Height="25" Margin="136,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>
        <Label x:Name ="lbLogin" Content="Логин" HorizontalAlignment="Left" Margin="136,82,0,0" VerticalAlignment="Top" FontFamily="Arial"/>
        <Label x:Name ="lbPassword" Content="Пароль" HorizontalAlignment="Left" Margin="136,132,0,0" VerticalAlignment="Top" FontFamily="Arial"/>
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="136,156,0,0" VerticalAlignment="Top" Width="258"/>
        <CheckBox x:Name="chbAdmin" Content="Администратор" HorizontalAlignment="Left" Margin="136,241,0,0" VerticalAlignment="Top"/>
        <Button x:Name ="butOK" Content="Ок" HorizontalAlignment="Left" Margin="136,275,0,0" VerticalAlignment="Top" Width="120" FontFamily="Arial" Click="butLogin_Click"/>
        <Button x:Name ="butCansel" Content="Отмена" HorizontalAlignment="Left" Margin="274,275,0,0" VerticalAlignment="Top" Width="120" FontFamily="Arial" Click="butRegistration_Click"/>
        <TextBox x:Name ="tbEmail" HorizontalAlignment="Left" Height="25" Margin="136,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>
        <Label x:Name ="lbEmail" Content="Email" HorizontalAlignment="Left" Margin="136,182,0,0" VerticalAlignment="Top" FontFamily="Arial"/>

    </Grid>
</Window>
