                        <DataGridTextColumn Binding="{Binding Weight}"  Header="Вес"/>
                        <DataGridTextColumn Binding="{Binding SportClub}"  Header="Спортивный клуб" HeaderStringFormat=""/>
                        <DataGridTextColumn Binding="{Binding City}"  Header="Родной город"/>
                        <DataGridTextColumn Binding="{Binding Street}"  Header="Улица"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <Label x:Name="label_Copy2" Content="Участники" HorizontalAlignment="Left" Margin="38,18,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Width="106"/>
        <Button x:Name="butAdd" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="642,61,0,0" Click="butAdd_Click"/>
        <Button x:Name="butEdit" Content="Редактировать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="642,86,0,0" Click="butEdit_Click"/>
        <Button x:Name="butDelete" Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="642,136,0,0" Click="butDelete_Click"/>
        <Button x:Name="butImport" Content="Загрузить из файла" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="642,186,0,0" Click="butImport_Click"/>

    </Grid>
</Window>


